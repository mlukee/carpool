{
  "name": "Carpool App",
  "title": "JoinMyRide",
  "description": "Ride sharing and transport cost sharing app",
  "port": 5000,
  "theme": {
    "style": "useSystem"
  },
  "menu_position": "left",
  "menu_items": [
    {
      "label": "Home",
      "component": "Home"
    },
    {
      "label": "Find a Ride",
      "component": "Find a Ride"
    },
    {
      "label": "Offer a Ride",
      "component": "Offer a Ride"
    },
    {
      "label": "Profile",
      "component": "Profile"
    },
    {
      "label": "My Rides",
      "component": "My Rides"
    },
    {
      "condition": "isLoggedIn === true",
      "label": "Logout",
      "component": "Logout"
    },
    {
      "condition": "isLoggedIn === false",
      "label": "Login",
      "component": "Login"
    }
  ],
  "components": [
    {
      "name": "Home",
      "url": "/"
    },
    {
      "name": "Find a Ride",
      "url": "/find-ride"
    },
    {
      "name": "Offer a Ride",
      "url": "/offer-ride"
    },
    {
      "name": "My Rides",
      "url": "/my-rides"
    },
    {
      "name": "Ride Details",
      "url": "/ride-details"
    },
    {
      "name": "Profile",
      "url": "/profile"
    },
    {
      "name": "Login",
      "url": "/login"
    },
    {
      "name": "Logout",
      "url": "/logout"
    },
    {
      "name": "Feedback",
      "url": "/feedback"
    }
  ],
  "api": {
    "base": "http://localhost:5000",
    "endpoints": [
      {
        "name": "findRide",
        "url": "/find-ride"
      },
      {
        "name": "offerRide",
        "url": "/offer-ride"
      },
      {
        "name": "myRides",
        "url": "/my-rides"
      },
      {
        "name": "rideDetails",
        "url": "/ride-details"
      },
      {
        "name": "submitFeedback",
        "url": "/feedback"
      },
      {
        "name": "profile",
        "url": "/profile"
      },
      {
        "name": "logout",
        "url": "/logout"
      },
      {
        "name": "login",
        "url": "/login"
      }
    ]
  },
  "render": {
    "Feedback": {
      "title": "Rate Your Ride",
      "fields": [
        {
          "label": "Rating",
          "name": "rating",
          "type": "number",
          "min": 1,
          "max": 5
        },
        {
          "label": "Comments",
          "name": "comments",
          "type": "text"
        }
      ]
    },
    "Find a Ride": {
      "title": "Available Rides",
      "table": {
        "headers": [
          "Origin",
          "Destination",
          "Date",
          "Seats"
        ],
        "rows": [
          {
            "field": "origin",
            "source": "availableRides"
          },
          {
            "field": "destination",
            "source": "availableRides"
          },
          {
            "field": "date",
            "source": "availableRides"
          },
          {
            "field": "seats",
            "source": "availableRides"
          }
        ]
      }
    },
    "Home": {
      "title": "Welcome to Carpool Ride Sharing Dashboard",
      "description": "Here you can find rides, offer rides, and manage your rides.",
      "button": {
        "label": "Find a Ride",
        "url": "/find-ride"
      }
    },
    "Login": {
      "title": "Login",
      "fields": [
        {
          "label": "Email",
          "name": "email",
          "type": "email"
        },
        {
          "label": "Password",
          "name": "password",
          "type": "password"
        }
      ],
      "button": [
        {
          "label": "Login",
          "type": "submit"
        }
      ]
    },
    "Logout": {
      "title": "Logout Confirmation",
      "description": "Are you sure you want to logout?",
      "button": {
        "label": "Logout",
        "type": "submit"
      }
    },
    "My Rides": {
      "title": "Your Upcoming Rides",
      "table": {
        "headers": [
          "Origin",
          "Destination",
          "Date",
          "Driver Name",
          "Driver Phone"
        ],
        "rows": [
          {
            "field": "origin",
            "source": "myRides"
          },
          {
            "field": "destination",
            "source": "myRides"
          },
          {
            "field": "date",
            "source": "myRides"
          },
          {
            "field": "driverName",
            "source": "myRides"
          },
          {
            "field": "driverPhone",
            "source": "myRides"
          }
        ]
      }
    },
    "Offer a Ride": {
      "title": "Offer a New Ride",
      "fields": [
        {
          "label": "Origin",
          "name": "origin",
          "type": "text"
        },
        {
          "label": "Destination",
          "name": "destination",
          "type": "text"
        },
        {
          "label": "Date",
          "name": "date",
          "type": "date"
        },
        {
          "label": "Seats",
          "name": "seats",
          "type": "number",
          "min": 1
        }
      ],
      "button": {
        "label": "Offer Ride",
        "type": "submit"
      }
    },
    "Profile": {
      "title": "User Profile",
      "fields": [
        {
          "label": "Name",
          "name": "name",
          "source": "profile"
        },
        {
          "label": "Email",
          "name": "email",
          "source": "profile"
        },
        {
          "label": "Phone",
          "name": "phone",
          "source": "profile"
        }
      ],
      "subTitle": "My Cars",
      "table": {
        "headers": [
          "Car Model",
          "Car Year",
          "License Plate",
          "Car Image"
        ],
        "rows": [
          {
            "field": "carModel",
            "source": "myCars"
          },
          {
            "field": "carYear",
            "source": "myCars"
          },
          {
            "field": "licensePlate",
            "source": "myCars"
          },
          {
            "field": "carImage?",
            "source": "myCars"
          }
        ]
      }
    },
    "Ride Details": {
      "title": "Details of the Ride",
      "fields": [
        {
          "label": "Origin",
          "name": "origin",
          "source": "rideDetails"
        },
        {
          "label": "Destination",
          "name": "destination",
          "source": "rideDetails"
        },
        {
          "label": "Date",
          "name": "date",
          "source": "rideDetails"
        },
        {
          "label": "Seats",
          "name": "seats",
          "source": "rideDetails"
        },
        {
          "label": "Driver Name",
          "name": "driverName",
          "source": "rideDetails"
        },
        {
          "label": "Driver Phone",
          "name": "driverPhone",
          "source": "rideDetails"
        }
      ]
    }
  }
}