{
    "name": "Carpool App",
    "title": "JoinMyRide",
    "description": "Ride sharing and transport cost sharing app",
    "port": 5000,
    "theme": {
        "style": "dark"
    },
    "menu_position": "top",
    "menu_items": [
        {
            "label": "Find a Ride",
            "component": "Find a Ride"
        },
        {
            "label": "Home",
            "component": "Home"
        },
        {
            "label": "Offer a Ride",
            "component": "Offer a Ride"
        },
        {
            "label": "Profile",
            "component": "Profile"
        },
        {
            "condition": "isLoggedIn === true",
            "label": "Logout",
            "component": "Logout"
        },
        {
            "condition": "isLoggedIn === false",
            "label": "Login",
            "component": "Login"
        }
    ],
    "components": [
        {
            "name": "Home",
            "url": "/"
        },
        {
            "name": "Find a Ride",
            "url": "/find-ride"
        },
        {
            "name": "Offer a Ride",
            "url": "/offer-ride"
        },
        {
            "name": "My Rides",
            "url": "/my-rides"
        },
        {
            "name": "Ride Details",
            "url": "/ride-details"
        },
        {
            "name": "Profile",
            "url": "/profile"
        },
        {
            "name": "Login",
            "url": "/login"
        },
        {
            "name": "Logout",
            "url": "/logout"
        },
        {
            "name": "Feedback",
            "url": "/feedback"
        }
    ],
    "api": {
        "base": "http://localhost:5000",
        "endpoints": [
            {
                "name": "findRide",
                "url": "/find-ride"
            },
            {
                "name": "offerRide",
                "url": "/offer-ride"
            },
            {
                "name": "myRides",
                "url": "/my-rides"
            },
            {
                "name": "rideDetails",
                "url": "/ride-details"
            },
            {
                "name": "submitFeedback",
                "url": "/feedback"
            },
            {
                "name": "profile",
                "url": "/profile"
            },
            {
                "name": "logout",
                "url": "/logout"
            },
            {
                "name": "login",
                "url": "/login"
            }
        ]
    },
    "render": {
        "Feedback": {
            "title": "Rate Your Ride",
            "fields": [
                {
                    "label": "Rating",
                    "name": "rating",
                    "type": "number",
                    "min": 1,
                    "max": 5
                },
                {
                    "label": "Comments",
                    "name": "comments",
                    "type": "text"
                }
            ]
        },
        "Find a Ride": {
            "title": "Available Rides",
            "table": {
                "headers": [
                    "Date",
                    "Origin",
                    "Destination",
                    "Seats"
                ],
                "rows": [
                    {
                        "field": "date",
                        "source": "availableRides"
                    },
                    {
                        "field": "origin",
                        "source": "availableRides"
                    },
                    {
                        "field": "destination",
                        "source": "availableRides"
                    },
                    {
                        "field": "seats",
                        "source": "availableRides"
                    }
                ]
            }
        },
        "Home": {
            "title": "Welcome to Carpool Ride Sharing",
            "description": "Here you can find rides, offer rides, and manage your rides.",
            "button": {
                "label": "Find a Ride",
                "url": "/find-ride"
            }
        },
        "Login": {
            "title": "Login",
            "fields": [
                {
                    "label": "Email",
                    "name": "email",
                    "type": "email"
                },
                {
                    "label": "Password",
                    "name": "password",
                    "type": "password"
                }
            ],
            "button": [
                {
                    "label": "Login",
                    "url": "/login"
                }
            ]
        },
        "Logout": {
            "title": "Logout Confirmation",
            "description": "Are you sure you want to logout?",
            "button": [
                {
                    "label": "Logout",
                    "url": "/logout"
                }
            ]
        },
        "My Rides": {
            "title": "Your Upcoming Rides",
            "table": {
                "headers": [
                    "Date",
                    "Origin",
                    "Destination",
                    "Driver Name",
                    "Driver Phone"
                ],
                "rows": [
                    {
                        "field": "origin",
                        "source": "myRides"
                    },
                    {
                        "field": "destination",
                        "source": "myRides"
                    },
                    {
                        "field": "date",
                        "source": "myRides"
                    },
                    {
                        "field": "driverName",
                        "source": "myRides"
                    },
                    {
                        "field": "driverPhone",
                        "source": "myRides"
                    }
                ]
            }
        },
        "Offer a Ride": {
            "title": "Offer a New Ride",
            "fields": [
                {
                    "label": "Origin",
                    "name": "origin",
                    "type": "text"
                },
                {
                    "label": "Destination",
                    "name": "destination",
                    "type": "text"
                },
                {
                    "label": "Date",
                    "name": "date",
                    "type": "date"
                },
                {
                    "label": "Seats",
                    "name": "seats",
                    "type": "number",
                    "min": 1
                }
            ],
            "button": [
                {
                    "label": "Offer Ride",
                    "url": "/offer-ride"
                }
            ]
        },
        "Profile": {
            "title": "User Profile",
            "fields": [
                {
                    "label": "Name",
                    "name": "name",
                    "source": "profile"
                },
                {
                    "label": "Email",
                    "name": "email",
                    "source": "profile"
                },
                {
                    "label": "Phone",
                    "name": "phone",
                    "source": "profile"
                }
            ],
            "table": {
                "headers": [
                    "Car Model",
                    "Car Year",
                    "License Plate",
                    "Car Image"
                ],
                "rows": [
                    {
                        "field": "carModel",
                        "source": "myCars"
                    },
                    {
                        "field": "carYear",
                        "source": "myCars"
                    },
                    {
                        "field": "licensePlate",
                        "source": "myCars"
                    },
                    {
                        "field": "carImage?",
                        "source": "myCars"
                    }
                ]
            }
        },
        "Ride Details": {
            "title": "Details of the Ride",
            "fields": [
                {
                    "label": "Origin",
                    "name": "origin",
                    "source": "rideDetails"
                },
                {
                    "label": "Destination",
                    "name": "destination",
                    "source": "rideDetails"
                },
                {
                    "label": "Date",
                    "name": "date",
                    "source": "rideDetails"
                },
                {
                    "label": "Seats",
                    "name": "seats",
                    "source": "rideDetails"
                },
                {
                    "label": "Driver Name",
                    "name": "driverName",
                    "source": "rideDetails"
                },
                {
                    "label": "Driver Phone",
                    "name": "driverPhone",
                    "source": "rideDetails"
                }
            ]
        }
    }
}